<div class="container">
  <form action="/restaurants/newrestaurant" method="POST">
    <div class="mb-3 mt-3 form-group">
      <label for="id" class="form-label">id</label>
      <input
        class="form-control"
        id="id"
        type="text"
        placeholder="id(請輸入數字0~999)"
        name="id"
        pattern="^([0-9]|[1-9][0-9]{1,2})$"
        required
      />
    </div>
    <div class="mb-3 form-group">
      <label for="name" class="form-label">name</label>
      <input
        class="form-control"
        id="name"
        type="text"
        placeholder="請輸入20個字元以內的文字"
        name="name"
        maxlength="20"
      />
    </div>
    <div class="mb-3 form-group">
      <label for="name_en" class="form-label">name_en</label>
      <input
        id="name_en"
        class="form-control"
        type="text"
        placeholder="請輸入20個字元以內的文字"
        name="name_en"
        maxlength="20"
      />
    </div>
    <div class="mb-3 form-group">
      <label for="category" class="form-label">category</label>
      <input
        class="form-control"
        id="category"
        type="text"
        placeholder="請輸入20個字元以內的文字"
        name="category"
        maxlength="20"
      />
    </div>
    <div class="mb-3 form-group">
      <label for="image" class="form-label">image</label>
      <input
        class="form-control"
        id="image"
        type="text"
        placeholder="若圖片網址過長，請選擇轉為短網址"
        name="image"
        maxlength="150"
      />
    </div><div class="mb-3 form-group">
      <label for="location" class="form-label">location</label>
      <input
        class="form-control"
        id="location"
        type="text"
        placeholder="請輸入20個字元以內的文字"
        name="location"
        maxlength="20"
      />
    </div><div class="mb-3 form-group">
      <label for="phone" class="form-label">phone</label>
      <input
        class="form-control"
        id="phone"
        type="tel"
        placeholder="請注意格式是098-765-4321或0987654321"
        name="phone"
        pattern="^\(?\d{3}\)?[- ]?\d{3}[- ]?\d{4}$"
      />
    </div>
    <div class="mb-3 form-group">
      <label for="google_map" class="form-label">google_map</label>
      <input
        class="form-control"
        id="google_map"
        type="text"
        placeholder="請輸入20個字元以內的文字"
        name="google_map"
        maxlength="20"
      />
    </div><div class="mb-3 form-group">
      <label for="rating" class="form-label">rating</label>
      <input
        class="form-control"
        id="rating"
        type="text"
        placeholder="請輸入0~5之間並允許一位的小數點"
        name="rating"
        pattern="^[0-4](\.\d)?|[5]$"
      />
    </div><div class="mb-3 form-group">
      <label for="description" class="form-label">description</label>
      <input
        class="form-control"
        id="description"
        type="text"
        placeholder="請在40個字元內簡短描述"
        name="description"
        maxlength="40"
      />
    </div>
    <div style="display:flex;"><button
        type="submit"
        class="btn btn-info me-3"
      >Create</button>
      <a href="/"><button
          type="button"
          class="btn btn-info"
        >home</button></a></div>
  </form>
</div>